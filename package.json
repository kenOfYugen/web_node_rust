{
  "name": "webrust",
  "version": "0.0.2",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "tape -r coffeescript/register tests/**/*.test.coffee | tap-spec",
    "test:native": "cd native/estimate_pi/; cargo t",
    "bench": "coffee bench/pi_est.bench.coffee",
    "compile:rust:native": "cd native/estimate_pi/; cargo b",
    "compile:rust:native:release": "npm run compile:rust:native -- --release",
    "compile:rust:asmjs": "cd native/pi_est_browser/; cargo b --target=asmjs-unknown-emscripten",
    "compile:rust:asmjs:release": "npm run compile:rust:asmjs -- --release",
    "postcompile:rust:asmjs:release": "cp native/pi_est_browser/target/asmjs-unknown-emscripten/release/pi_est_browser.js src/pi_est_asmjs/pi_est_browser.asm.js",
    "compile:rust:wasm": "cd native/pi_est_browser/; cargo b --target=wasm32-unknown-emscripten",
    "compile:rust:wasm:release": "npm run compile:rust:wasm -- --release",
    "postcompile:rust:wasm:release": "echo src/pi_est_wasm/ ./ | xargs -n 1 cp native/pi_est_browser/target/wasm32-unknown-emscripten/release/pi_est_browser.*",
    "precompile:pug": "mkdir -p target/web/",
    "compile:pug": "pug -P --out target/web/ src/web/",
    "precompile:coffeescript": "mkdir -p target/web/ target/node/",
    "compile:coffeescript": "browserify --extension=\".coffee\" src/index.coffee",
    "compile:coffeescript:web": "npm run compile:coffeescript -- -t [ coffeeify --bare false --header false ] -t [ envify --NODE_ENV browser_debug ] -o target/web/bundle.js",
    "compile:coffeescript:web:debug": "npm run compile:coffeescript:web -- --debug",
    "compile:coffeescript:node": "npm run compile:coffeescript -- -t [ coffeeify --bare true --header false ] -t [ envify --NODE_ENV node_debug ] -o target/node/bundle.js",
    "compile:coffeescript:node:debug": "npm run compile:coffeescript:node -- --debug",
    "clean": "git clean -xdfn; read -n1 -r -p \"\npress ctrl+c to stop\" key; git clean -xdf; printf \"\ndone!\n\"",
    "compile-and-benchmark": "npm run compile:rust:asmjs:release; npm run compile:rust:wasm:release; npm run bench"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "benchmark": "^2.1.4",
    "bindings": "^1.3.0",
    "browserify": "^14.5.0",
    "coffeeify": "^3.0.0",
    "coffeescript": "^2.0.2",
    "envify": "^4.1.0",
    "node-gyp": "^3.6.2",
    "pug-cli": "^1.0.0-alpha6",
    "tap-spec": "^4.1.1",
    "tape": "^4.8.0",
    "tcomb": "^3.2.24"
  },
  "dependencies": {}
}
