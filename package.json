{
  "name": "webrust",
  "version": "0.0.1",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "test:native": "cargo t --manifest-path native/estimate_pi/Cargo.toml",

    "compile:rust:native": "cargo b --manifest-path native/estimate_pi/Cargo.toml",
    "compile:rust:native:release": "npm run compile:rust:native -- --release",

    "compile:rust:asmjs": "npm run compile:rust:native -- --target=asmjs-unknown-emscripten",
    "compile:rust:asmjs:release": "npm run compile:rust:asmjs -- --release",

    "compile:rust:wasm": "npm run compile:rust:native -- --target=wasm32-unknown-emscripten",
    "compile:rust:wasm:release": "npm run compile:rust:wasm -- --release",

    "compile:coffeescript": "coffee -b --no-header -o target/ -c src/",

    "clean": "rm -rf node_modules/ target/ build/"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "bindings": "^1.3.0",
    "coffeescript": "^2.0.1",
    "node-gyp": "^3.6.2"
  }
}
